  const createNewConversation = () => {
    const newId = `conv-${Date.now()}`;
    const newConversation = {
      id: newId,
      title: `æ–°å¯¹è¯`, // åœ¨è‡ªåŠ¨å‘½åå®Œæˆå‰æ˜¾ç¤ºä¸º"æ–°å¯¹è¯"
      createdAt: new Date().toISOString(),
      messages: [],
