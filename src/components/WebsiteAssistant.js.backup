    }
  };

  const addNewModel = () => {
    if (newModelId.trim() && newModelName.trim()) {
      const newModel = {
        id: newModelId.trim(),
        name: newModelName.trim()
      };
      
      setModels(prev => [...prev, newModel]);
      setNewModelId('');
      setNewModelName('');
    }
  };

  const removeModel = (id) => {
    // ä¸å…è®¸åˆ é™¤å½“å‰æ­£åœ¨ä½¿ç”¨çš„æ¨¡å‹
    if (selectedModel === id || settings.defaultModel === id) {
      alert('æ— æ³•åˆ é™¤æ­£åœ¨ä½¿ç”¨çš„æ¨¡å‹');
      return;
    }
    
    setModels(prev => prev.filter(model => model.id !== id));
  };

  const saveSettings = () => {
    setSettings(prev => ({
      ...prev,
      defaultModel: selectedModel || prev.defaultModel
    }));
    alert('è®¾ç½®å·²ä¿å­˜');
  };

  const deleteConversation = (id) => {
    if (window.confirm('ç¡®å®šè¦åˆ é™¤æ­¤å¯¹è¯å—ï¼Ÿæ­¤æ“ä½œæ— æ³•æ’¤é”€ã€‚')) {
      const updatedConversations = conversations.filter(conv => conv.id !== id);
      setConversations(updatedConversations);
      
      // å¦‚æœåˆ é™¤çš„æ˜¯å½“å‰å¯¹è¯ï¼Œåˆ‡æ¢åˆ°æ–°å»ºå¯¹è¯çŠ¶æ€
      if (currentConversationId === id) {
        setCurrentConversationId(null);
        setMessages([]);
        setCurrentView('chat');
        setViewChangedToChat(true); // ç¡®ä¿æ»šåŠ¨åˆ°åº•éƒ¨
      }
    }
  };

  // å¤„ç†å¤åˆ¶æ¶ˆæ¯å†…å®¹
  const handleCopyMessage = (content, event) => {
    // é˜»æ­¢äº‹ä»¶å†’æ³¡ï¼Œé¿å…å¹²æ‰°å…¶ä»–æŒ‰é’®
    if (event) {
      event.stopPropagation();
    }
    
    // è·å–å½“å‰ç‚¹å‡»çš„æŒ‰é’®å…ƒç´ 
    const button = event?.currentTarget;
    
    navigator.clipboard.writeText(content)
      .then(() => {
        if (button) {
          // æ·»åŠ "å·²å¤åˆ¶"æ ·å¼
          button.classList.add('copied');
          const originalText = button.textContent;
          button.textContent = "âœ“ å·²å¤åˆ¶";
          
          // 2ç§’åæ¢å¤
          setTimeout(() => {
            button.classList.remove('copied');
            button.textContent = originalText;
          }, 2000);
        }
      })
      .catch((err) => {
        console.error('å¤åˆ¶å¤±è´¥:', err);
        alert('å¤åˆ¶å¤±è´¥ï¼Œè¯·æ‰‹åŠ¨é€‰æ‹©æ–‡æœ¬å¤åˆ¶');
      });
  };

  // å¤„ç†ç¼–è¾‘æ¶ˆæ¯
  const handleEditMessage = (message) => {
    setEditingMessageId(message.id || message.timestamp);
    setEditedContent(message.content);
  };

  // æäº¤ç¼–è¾‘åçš„æ¶ˆæ¯
  const submitEditedMessage = async () => {
    if (!editedContent.trim()) return;

    // æ‰¾åˆ°æ­£åœ¨ç¼–è¾‘çš„æ¶ˆæ¯åœ¨æ•°ç»„ä¸­çš„ä½ç½®
    const messageIndex = messages.findIndex(
      msg => (msg.id || msg.timestamp) === editingMessageId
    );
    if (messageIndex === -1) return;

    // å¦‚æœç¼–è¾‘çš„æ˜¯ç”¨æˆ·æ¶ˆæ¯ï¼Œéœ€è¦é‡æ–°ç”ŸæˆåŠ©æ‰‹å“åº”
    const isUserMessage = messages[messageIndex].role === 'user';
    
    // æ›´æ–°æ¶ˆæ¯å†…å®¹
    const updatedMessages = [...messages];
    updatedMessages[messageIndex] = {
      ...updatedMessages[messageIndex],
