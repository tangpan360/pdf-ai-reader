  }, [settings]);
  
  // ä¿å­˜æ¨¡å‹åˆ—è¡¨åˆ°æœ¬åœ°å­˜å‚¨
  useEffect(() => {
    localStorage.setItem('assistantModels', JSON.stringify(models));
  }, [models]);
  
  // ä¿å­˜å¯¹è¯åˆ°æœ¬åœ°å­˜å‚¨
  useEffect(() => {
