  // æ·»åŠ é”®ç›˜å¿«æ·é”®ç›‘å¬
  useEffect(() => {
    const handleKeyDown = (e) => {
      // Ctrl + L å¿«æ·é”®åˆ‡æ¢ä¾§è¾¹æ 
